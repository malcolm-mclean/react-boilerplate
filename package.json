{
	"name": "react-boilerplate",
	"version": "0.0.0",
	"main": "src/index.ts",
	"repository": "https://github.com/malcolm-mclean/react-boilerplate.git",
	"author": "Malcolm McLean",
	"license": "MIT",
	"private": true,
	"scripts": {
		"analyze": "yarn run build:stats && webpack-bundle-analyzer stats.json dist/ --mode static",
		"analyze:ci": "yarn run build:stats && webpack-bundle-analyzer stats.json dist/ --mode json",
		"build": "yarn run clean && yarn run lint && webpack --config webpack.prod.config.js",
		"build:stats": "yarn run clean && webpack --config webpack.prod.config.js --json > stats.json",
		"clean": "rimraf dist/",
		"lint": "yarn run lint:ts && yarn run lint:scss",
		"lint:ts": "eslint --ext .ts,.tsx src/",
		"lint:scss": "stylelint \"src/**/*.scss\"",
		"start": "webpack-dev-server --config webpack.dev.config.js",
		"test": "yarn run lint && jest"
	},
	"devDependencies": {
		"@babel/core": "^7.11.6",
		"@babel/plugin-syntax-dynamic-import": "^7.8.3",
		"@babel/preset-env": "^7.11.5",
		"@babel/preset-react": "^7.10.4",
		"@babel/preset-typescript": "^7.10.4",
		"@malcolm-mclean/eslint-config": "malcolm-mclean/eslint-config#3.0.0",
		"@malcolm-mclean/stylelint-config": "malcolm-mclean/stylelint-config#1.1.0",
		"@testing-library/jest-dom": "^5.8.0",
		"@testing-library/react": "^10.0.4",
		"@types/jest": "^25.2.3",
		"@types/react": "^16.9.35",
		"@types/react-dom": "^16.9.8",
		"@types/react-router-dom": "^5.1.5",
		"autoprefixer": "^9.8.0",
		"babel-loader": "^8.1.0",
		"babel-plugin-jsx-remove-data-test-id": "^2.1.3",
		"cross-env": "^7.0.2",
		"css-loader": "^3.5.3",
		"danger": "^10.2.0",
		"file-loader": "^6.0.0",
		"html-webpack-plugin": "^4.3.0",
		"jest": "^26.0.1",
		"mini-css-extract-plugin": "^0.9.0",
		"node-sass": "^4.14.1",
		"postcss-loader": "^3.0.0",
		"prettier": "^2.0.5",
		"rimraf": "^3.0.2",
		"sass-loader": "^8.0.2",
		"style-loader": "^1.2.1",
		"terser-webpack-plugin": "^3.0.1",
		"ts-jest": "^26.0.0",
		"typescript": "^3.9.3",
		"webpack": "^4.43.0",
		"webpack-bundle-analyzer": "^3.8.0",
		"webpack-cli": "^3.3.11",
		"webpack-dev-server": "^3.11.0",
		"webpack-merge": "^4.2.2"
	},
	"dependencies": {
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-router-dom": "^5.2.0"
	}
}
